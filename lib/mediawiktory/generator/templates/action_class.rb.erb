# frozen_string_literal: true

module <%= @namespace %>
  module Actions
    # <%= description %>
    #
    # Usage:
    #
<% if params.empty? %>    # ```ruby
    # api.<%= name %>.perform # returns string with raw output
    # # or
    # api.<%= name %>.response # returns output parsed and wrapped into Mash-like object
    # ```
    #
    # This action has no parameters.
<% else %>    # ```ruby
    # api.<%= name %>(**options).perform # returns string with raw output
    # # or
    # api.<%= name %>(**options).response # returns output parsed and wrapped into Mash-like object
    #
    # # or, with chainable interface:
    # api.<%= name %>.<%= params.first.name %>(value).perform
    # ```
<% end %>    #
    # See {Base} for generic explanation of working with MediaWiki actions.
    #
    # All action's parameters are documented as its public methods, see below.
    #
    class <%= class_name %> < <%=@namespace%>::Actions::<%= http_method %>
<% params.each { |param| %><%= partial '_param_method', param %><% } %>    end
  end
end
